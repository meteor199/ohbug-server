{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "name": "ohbug-server",
  "version": "1.0.0",
  "description": "Ohbug Server",
  "author": "chenyueban <jasonchan0527@gmail.com>",
  "homepage": "https://github.com/ohbug-org/ohbug-server",
  "bugs": {
    "url": "https://github.com/ohbug-org/ohbug-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ohbug-org/ohbug-server"
  },
  "license": "Apache-2.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "start": "npm run docker:dev & lerna run start --parallel",
    "start:debug": "cross-env pm2 start ./ecosystem.config.js --env production",
    "start:prod": "cross-env pm2-runtime start ./ecosystem.config.js --env production",
    "docker:dev": "docker-compose -f ./docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose --env-file .env.production -f ./docker-compose.prod.yml up --build -d",
    "prettier": "lerna run prettier",
    "lint": "lerna run lint",
    "test": "lerna run test --parallel",
    "test:watch": "lerna run test:watch --parallel",
    "update:deps": "pnpm update --interactive --latest"
  },
  "dependencies": {
    "@nestjs/bull": "^0.3.1",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/microservices": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/typeorm": "^7.1.5",
    "@ohbug/browser": "^1.0.15",
    "@ohbug/core": "^1.1.3",
    "@ohbug/miniapp": "^1.0.1",
    "@ohbug/react": "^1.0.11",
    "@ohbug/types": "^1.1.2",
    "@ohbug/vue": "^1.0.10",
    "bull": "^3.22.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "pg": "^8.6.0",
    "ramda": "^0.27.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.7",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@chenyueban/lint": "^0.2.6",
    "@chenyueban/tsconfig": "^0.1.7",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/testing": "^7.6.11",
    "@types/bull": "^3.15.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/ramda": "^0.27.40",
    "@types/react": "^17.0.1",
    "@types/supertest": "^2.0.11",
    "axios": "^0.21.1",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
