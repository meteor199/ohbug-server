{
  "name": "@ohbug-server/notifier",
  "version": "0.0.0",
  "description": "ohbug server notifier",
  "author": "chenyueban",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "cross-env NODE_ENV=development nest start --watch",
    "build": "nest build",
    "start:debug": "cross-env pm2 start ./ecosystem.config.js --env production",
    "start:prod": "cross-env pm2-runtime start ./ecosystem.config.js --env production",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@ohbug-server/common": "^0.0.0",
    "markdown-it": "^12.0.4",
    "nodemailer": "^6.4.17",
    "web-push": "^3.4.4"
  },
  "devDependencies": {
    "@types/markdown-it": "^12.0.1",
    "@types/nodemailer": "^6.4.0",
    "@types/web-push": "^3.3.0"
  }
}
